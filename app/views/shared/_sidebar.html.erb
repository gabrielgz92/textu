<div id="mySidebar" class="sidebar">
  <h2 id="textu-logo">Textu</h2>
   <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()"><i class="fas fa-bars font-awsome"></i></a>
  <%= link_to new_project_path do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="fas fa-file-import"></i></div>
      <div class="symbol-text"><p>Import</p></div>
    </div>
  <% end %>
  <%= link_to projects_path do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="far fa-folder"></i>
      </div>
      <div class="symbol-text"><p>Projects</p></div>
    </div>
  <% end %>
  <%= link_to project_reviews_path(params[:project_id]) do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="fas fa-chart-bar"></i>
      </div>
      <div class="symbol-text">
        <p>General</p>
      </div>
    </div>
  <% end %>
  <%= link_to project_entities_path do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="fas fa-bullseye"></i>
      </div>
      <div class="symbol-text">
        <p>Keyword</p>
      </div>
    </div>
  <% end %>
  <%= link_to project_entities_data_path do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="fas fa-project-diagram"></i>
      </div>
      <div class="symbol-text">
        <p>Keywords</p>
      </div>
    </div>
  <% end %>
  <%= link_to project_reviews_for_entity_path(params[:project_id]) do %>
    <div class="import-csv-btn d-flex">
      <div class="symbol">
        <i class="far fa-comment-alt"></i>
      </div>
      <div class="symbol-text">
        <p>Reviews</p>
      </div>
    </div>
  <% end %>
</div>

