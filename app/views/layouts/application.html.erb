<!DOCTYPE html>
<html>
  <%= render 'shared/page-head' %>
  <body class="has-navbar">
    <%= render 'shared/navbar' %>
    <%= javascript_include_tag 'application' %>
    <%= yield %>
    <%= javascript_pack_tag 'application' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
  <script>
    function toggleNav() {
      document.getElementById("mySidebar").classList.toggle("sidebar-closed")
      document.querySelector(".main").classList.toggle("sidebar-closed");
      document.getElementById("textu-logo").classList.toggle("sidebar-closed");
    }
</script>
</html>
