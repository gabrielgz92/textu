<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <%= javascript_include_tag 'application' %>
    <div class="layout-tour">
      <div class="layout-tour-navigator">
        <img src="<%= image_path("happy.svg") %>" class="navigator-mascot" alt="">
        <div class="layout-tour-menu">
          <h3 class="layout-tour-menu-title">Data Tour</h3>
          <ol class="layout-tour-menu-items">
            <li>
            <%= link_to "Projects",projects_path,
                                   class: "#{current? "layout-tour-menu-item-active",
                                   projects_path}"  %>
            </li>
            <li>
            <%= link_to "Reviews", project_reviews_path(params[:project_id]),
                                   class: "#{current? "layout-tour-menu-item-active",
                                   project_reviews_path(params[:project_id])}"  %>
            </li>
            <li>
            <%= link_to "Reviews traffic", project_reviews_by_month_graph_path(params[:project_id]),
                                          class: "#{current? "layout-tour-menu-item-active",
                                          project_reviews_by_month_graph_path(params[:project_id])}"  %>
            </li>
            <li>
            <%= link_to "Common words", project_entities_data_path,
                                      class: "#{current? "layout-tour-menu-item-active",
                                      project_entities_data_path}"  %>
            </li>
            <li>
            <%= link_to "Keyword insights", project_entities_path,
                                      class: "#{current? "layout-tour-menu-item-active",
                                      project_entities_path}"  %>
            </li>
            <li>
            <%= link_to "Conclusion", project_conclusion_path(params[:project_id]),
                                      class: "#{current? "layout-tour-menu-item-active",
                                      project_conclusion_path(params[:project_id])}"  %>
            </li>
          </ol>
        </div>
      </div>
      <div class="layout-tour-content">
    <h1 class="layout-tour-title"><%= yield(:title) %></h1>

        <div class="layout-tour-content-inner">
              <%= yield %>

        </div>
      </div>
    </div>
    <%= javascript_pack_tag 'application' %>
    <%= render 'layouts/messages' %>

    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
      <div class="footer-copyright">
        @Textu
      </div>
    </div>

  </body>
</html>
