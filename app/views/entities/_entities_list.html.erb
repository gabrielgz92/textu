<div class="entities-list">
  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <form>
      <input class="form-control" type="search" placeholder="type keyword" aria-label="Search">
      </form>
    </li>
    <% sorted_entities = [] %>
    <% @entities.each do |entity| %>
      <% if sorted_entities.exclude?(entity)  %>
        <% sorted_entities << entity %>
      <% end %>
    <% end %>
      <% sorted_entities.sort_by(&:occurrences).reverse!.each do  |sorted_entity|%>
      <%= link_to project_entity_path(params[:project_id], sorted_entity) do %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= sorted_entity.name %>
          <span class="badge badge-primary badge-pill"><%= sorted_entity.occurrences %></span>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
