<div class="entities-list">
  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <form>
      <input class="form-control" type="search" placeholder="type keyword" aria-label="Search">
      </form>
    </li>
    <% @entities.each do |entity, occurrence| %>
      <%= link_to project_entities_path(params[:project_id], entity: entity ) do %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= entity %>
          <span class="badge badge-primary badge-pill"><%= occurrence %></span>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
